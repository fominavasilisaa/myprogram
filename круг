#include <iostream>
#include <iomanip>
#include <cmath>

using namespace std;

struct Point{
	double x;
	double y;
};
struct Circle {
	Point center;
	int rad;

	void centerPoint() {
		cout << "Введите координату x центра: ";
		cin >> center.x;
		cout << "Введите координату y центра: ";
		cin >> center.y;
	}

	void radiusCircle() {
		cout << "Введите радиус окружности: ";
		cin >> rad;
	}

	void printCircle() {
		cout << "х центра: " << center.x << endl;
		cout << "у центра: " << center.y << endl;
		cout << "радиус: " << rad << endl;
	}

	void lenCircle() {
		double pi = 3.14;
		cout << fixed << setprecision(1);
		cout << "Длина окружности = " << 2 * rad * pi << endl;
	}

	void squareCircle() {
		double pi = 3.14;
		cout << fixed << setprecision(1);
		cout << "Площадь круга = " << pi * pow(rad, 2) << endl;
	}
};

int main() {
	Circle circle;

	circle.centerPoint();
	circle.radiusCircle();

	circle.printCircle();
	circle.lenCircle();
	circle.squareCircle();

	return 0;
}
